@inject IJSRuntime JSRuntime

<button class="btn btn-primary" @onclick="OnAddClick">Add Article</button>
<table class="table mt-3">
    <thead>
        <tr>
            <th></th>
            <th>Id</th>
            <th>Title</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ArticleListItems)
        {
            <tr>
                <td><button class="btn btn-warning" @onclick="e => OnEditClick.InvokeAsync(item)">Edit</button></td>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Category</td>
                <td><button class="btn btn-danger" @onclick="e => ShowConfirm(item)">Delete</button></td>
            </tr>

        }
    </tbody>
</table>

<div class="modal" id="deletecategorymodal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Delete Article</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                Do you want to delete the article?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" @onclick="OnYesClick">Yes</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

@code {

    [Parameter]
    public ArticleListItem[] ArticleListItems { get; set; }

    [Parameter]
    public EventCallback OnAddClick { get; set; }

    [Parameter]
    public EventCallback<ArticleListItem> OnEditClick { get; set; }

    [Parameter]
    public EventCallback<ArticleListItem> OnDeleteClick { get; set; }

    private ArticleListItem itemToDelete;
    private async Task ShowConfirm(ArticleListItem item)
    {
        this.itemToDelete = item;
        await JSRuntime.InvokeVoidAsync("showConfirmDelete", "deletecategorymodal");
    }
    private async Task OnYesClick()
    {
        await OnDeleteClick.InvokeAsync(this.itemToDelete);
        await JSRuntime.InvokeVoidAsync("hideConfirmDelete", "deletecategorymodal");
    }
}